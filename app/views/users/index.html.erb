<h1>Users</h1>

<div align="center">
  <%= will_paginate %>
</div>

<% @users.each do |user| %>
  <h2>
    <%= link_to user.username, user_path(user) %>
    <% if logged_in? && (current_user == user || current_user.admin?) %>
      <%= link_to "Edit", edit_user_path(user) %>
      <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete #{user.username}?"} %>
    <% end %>
  </h2>
  <p><%= pluralize(user.articles.count, "article") %> written.</p>
  <p><%= user.email %></p>
<% end %>