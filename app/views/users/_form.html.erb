<%= form_for @user do |f| %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, placeholder: "Username" %>
  </p>

  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Email" %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "Password" %>
  </p>

  <p>
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update", class: "btn btn-primary btn-large") %>
  </p>
<% end %>